<div class="col">
    <div class="card h-100 hoverable">
      {% if project.img %}
        {%
          include figure.liquid
          loading="eager"
          path=project.img
          sizes = "250px"
          alt="project thumbnail"
          class="card-img-top"
        %}
      {% endif %}
      <div class="card-body">
        <h2 class="card-project-title">{{ project.title }}</h2>
        {% if project.company %}
          <p class="card-extra-text">By {{ project.company }}</p>
        {% endif %}
        {% if project.platform %}
          <p class="card-extra-text">{{ project.platform }}</p>
        {% endif %}
        {% if project.link %}
            <a class="card-extra-link" href="{% if project.redirect %}{{ project.redirect }}{% else %}{{ project.url | relative_url }}{% endif %}">{{ project.link }}</a>
        {% endif %}
        <p class="card-main-text">{{ project.description }}</p>
        {% if project.role %}
          <p class="card-role-spacer"> </p>
          <p class="card-role">{{ project.role }}</p>
        {% endif %}
      </div>
    </div>
</div>
